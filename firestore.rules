rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /talks/{talk} {
      allow read;
      allow write: if request.auth.uid != null;
      match /messages/{message} {
        allow read;
        allow write: if request.auth.uid != null;
      }
    }
    match /groups/{group} {
      allow read;
      allow write: if request.auth.uid != null;
      match /messages/{message} {
        allow read;
        allow write: if request.auth.uid != null;
      }
      match /users/{user} {
        allow read;
        allow write: if request.auth.uid != null;
      }
    }
    match /opinions/{opinion} {
      allow write;
    }
  }
}